<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tazeqa"
    android:background="@drawable/yyes">
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:id="@+id/imglogo"
        android:layout_width="150dp"
        android:layout_height="150dp">

    </ImageView>
<LinearLayout
    android:id="@+id/btnly"
    android:layout_centerInParent="true"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginRight="5dp"
        android:background="#6AF3AD20"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img1"
            android:src="@drawable/mas"
            android:layout_width="100dp"
            android:layout_height="100dp">

        </ImageView>
        <Button
            android:id="@+id/btn1"
            android:textColor="#8A520F"
            android:layout_marginTop="-15dp"
            android:background="@drawable/btn_tam_azeta"
            android:layout_width="wrap_content"
            android:text="@string/anaw"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lnn"
        android:background="#fff"

        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img2"
            android:src="@drawable/mzel"
            android:layout_width="100dp"
            android:layout_height="100dp">

        </ImageView>
        <Button
            android:id="@id/btn2"
            android:text="@string/aferdis"
            android:layout_marginTop="-15dp"
            android:background="@drawable/btn_tam_azeta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>

</LinearLayout>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_below="@+id/btnly"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content">
        <VideoView
            android:layout_centerInParent="true"
            android:id="@+id/tazeqavd"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </VideoView>
        <ProgressBar
            android:id="@+id/procharg"
            android:layout_centerInParent="true"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ProgressBar>
    </RelativeLayout>

</RelativeLayout>