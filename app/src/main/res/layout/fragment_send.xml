<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yess">

    <ImageView

        android:id="@+id/imglogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/im"
        tools:ignore="ImageContrastCheck">

    </ImageView>

    <TextView
        android:id="@+id/ettoo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/et_bbg"
        android:ems="10"
        android:gravity="center" />

    <EditText

        android:id="@+id/titree"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:autofillHints="0"
        android:background="@drawable/sendbg"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/Prenom"
        android:inputType="textPersonName"
        tools:ignore="TouchTargetSizeCheck"
        tools:targetApi="o" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView3"
        android:layout_width="350dp"
        android:layout_height="190dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="230dp"
        android:background="@drawable/sendbg"
        android:gravity="center"
        android:hint="@string/aw"
        tools:ignore="TextContrastCheck" />


    <Button
        android:id="@+id/BTN_ar2"
        android:layout_width="154dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="90dp"
        android:background="@drawable/et_bbg"
        android:text="@string/sw"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/text_send"
        android:layout_width="351dp"
        android:layout_height="48dp"
        android:gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent" />



</RelativeLayout>