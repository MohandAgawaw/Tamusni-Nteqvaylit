<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tira"
    android:background="@drawable/yyes">
    <LinearLayout

        android:background="#57292929"
        android:id="@+id/scr"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnply"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>

        <TextView
            android:id="@+id/txttimecu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

        <SeekBar
            android:id="@+id/seekbarid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

        </SeekBar>

        <TextView
            android:id="@+id/timedur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#FF0000"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/scr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

    </ImageView>
    <LinearLayout

        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/azz"
            android:layout_width="100dp"
            android:layout_height="80dp">
        </ImageView>
        <ImageView

            android:src="@drawable/backafexar"
            android:layout_width="120dp"
            android:layout_height="140dp">

        </ImageView>
        <ImageView
            android:layout_marginStart="5dp"
            android:src="@drawable/arc"
            android:layout_width="100dp"
            android:layout_height="80dp">

        </ImageView>
    </LinearLayout>


<LinearLayout
    android:orientation="vertical"
    android:layout_centerInParent="true"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn1"
        android:text="@string/tirra_n_ideqi"
        android:background="@drawable/tam_tira_top"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>
    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn2"
        android:text="@string/tirra_n_ifri"
        android:background="@drawable/tam_tirra_paren"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>
    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn3"
        android:text="@string/tirra_n_tahnayin"
        android:background="@drawable/tam_tirra_paren"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>


    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn6"
        android:text="@string/tirra_n_uzzeta"
        android:background="@drawable/tam_tirra_bottom"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>
    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn4"
        android:text="@string/tirra_n_tecrad"
        android:background="@drawable/tam_tirra_paren"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>
    <Button
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:id="@+id/btn5"
        android:text="@string/tirra_n_uqalus"
        android:background="@drawable/tam_tirra_paren"
        android:layout_width="200dp"
        android:layout_height="50dp"
        >

    </Button>
</LinearLayout>
</RelativeLayout>