<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yyes"
    tools:context=".Tiqubtin">

    <ImageView
        android:id="@+id/imglogo"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_width="100dp"
        android:layout_height="100dp">

    </ImageView>

    <ImageView
        android:layout_width="160dp"
        android:layout_height="300dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:background="@drawable/oldsage">

    </ImageView>
   <ScrollView

android:id="@+id/sckrr"
       android:background="#3E47495E"
       android:layout_centerInParent="true"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:fillViewport="true"
       android:measureAllChildren="false"
       android:scrollbars="none">

       <androidx.recyclerview.widget.RecyclerView

           android:orientation="horizontal"
           android:layout_marginBottom="10dp"
           android:layout_marginTop="5dp"
           android:id="@+id/RecyclerView"
           android:scaleType="fitXY"
           android:adjustViewBounds="true"
           android:clipToPadding="false"
           android:scrollbars="horizontal"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:ignore="ScrollViewSize">

       </androidx.recyclerview.widget.RecyclerView>
   </ScrollView>
    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/netlong"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/recycstyl"
        android:orientation="horizontal">


        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center"
            android:text="Internet Zayet..."
            android:textStyle="bold"
            android:id="@+id/textViewc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        </TextView>
        <ProgressBar
            android:layout_marginRight="30dp"
            android:layout_gravity="center"
            android:layout_width="20dp"
            android:layout_height="20dp"
            >

        </ProgressBar>

    </LinearLayout>

    <LinearLayout
        android:background="#3E403E3E"
        android:id="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sckrr"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnply"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>

        <TextView
            android:id="@+id/txttimecu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

        <SeekBar
            android:id="@+id/seekbarid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

        </SeekBar>

        <TextView
            android:id="@+id/timedur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#FF0000"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>
</RelativeLayout>