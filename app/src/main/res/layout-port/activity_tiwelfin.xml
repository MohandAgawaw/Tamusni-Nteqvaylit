<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tiwelfin"
    android:background="@drawable/yyes">
    <WebView
        android:id="@+id/Webview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>
    <ImageView

        android:layout_width="140dp"
        android:layout_height="130dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:id="@+id/imglogo"
        android:contentDescription="@string/Tamurt">
    </ImageView>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imglogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/gifImageView"
            android:layout_height="150dp"
            android:layout_marginTop="25dp"
            android:layout_width="200dp"
            android:src="@drawable/tamurth" />
        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/Tm"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_bbg"
            android:text="@string/Tamurt"
            android:textStyle="italic"
            >

        </Button>


        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/tz"
            android:layout_marginTop="10dp"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:background="@drawable/et_bbg"
            android:text="@string/maison"
            android:textStyle="italic"
            >
        </Button>
        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/id"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bbg"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="@string/potterie"
            android:textStyle="italic"

            >

        </Button>
        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/idurar"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bbg"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="Idurar"
            android:textStyle="italic">

        </Button>
        <Button
            android:textColor="#FFFFFF"
            android:id="@+id/tiqdimin"
            android:layout_marginTop="10dp"
            android:background="@drawable/et_bbg"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="tiqdimin"
            android:textStyle="italic">

        </Button>
    </LinearLayout>

</RelativeLayout>