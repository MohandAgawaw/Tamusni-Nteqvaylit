<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Amawal"
    android:background="@drawable/yess">

    <WebView
        android:id="@+id/Webvieww"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </WebView>

    <ImageView
        android:id="@+id/imglogo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"

        android:contentDescription="@string/btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="-77dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imglogo"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/arzdat"
            android:textColor="#28491A"
            android:textColorHighlight="#9FA51A"
            android:textSize="11sp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/awalikk"
                android:layout_width="171dp"
                android:layout_height="48dp"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/awalik"
                android:importantForAutofill="no"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/RSLT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/S" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="@string/aru"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/Nadha"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/et_bbg"
            android:text="@string/tekki"
            android:textSize="10sp"
            tools:ignore="SmallSp,TouchTargetSizeCheck" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text=""
                android:textColor="#FF0009"
                android:textSize="30sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5dp"
                android:text="@string/n_wawalen"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/progressBar"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_horizontal"
                android:indeterminate="false"
                android:indeterminateBehavior="repeat"
                app:SpinKit_Color="#000000" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>