<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TasenZikt"
    android:background="@drawable/yyes">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/btn_tam_tavlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgbtn1"
                android:background="@drawable/abizarstel"
                android:layout_width="130dp"
                android:layout_height="150dp">

            </ImageView>
            <Button
                android:id="@+id/btn1"
                android:text="Tibladin"
                android:textColor="#A4FDF7F7"
                android:textSize="20sp"
                android:layout_marginTop="-5dp"
                android:background="#00FFFFFF"
                android:layout_width="150dp"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:background="@drawable/btn_tan_ifri"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/imgbtn2"
                android:src="@drawable/ifri"
                android:layout_width="130dp"
                android:layout_height="150dp">

            </ImageView>
            <Button
                android:id="@+id/btn2"
                android:text="IFRAN"
                android:textSize="20sp"
                android:textColor="#A4FDF7F7"
                android:layout_marginTop="-5dp"
                android:background="#00FFFFFF"
                android:layout_width="150dp"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:background="@drawable/btn_tam_azru"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgbtn3"
                android:src="@drawable/aghedu"
                android:layout_width="130dp"
                android:layout_height="150dp">

            </ImageView>
            <Button
                android:id="@+id/btn3"
                android:text="Azru"
                android:layout_marginTop="-5dp"
                android:textSize="20sp"
                android:textColor="#A4FDF7F7"
                android:background="#00FFFFFF"
                android:layout_width="150dp"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imglogo"
        android:layout_width="80dp"
        android:layout_height="80dp">
    </ImageView>
</RelativeLayout>