<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yyes"
    tools:context=".tam_tasenzikt_tibladin">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginEnd="5dp"
        android:background="@drawable/btn_tam_tavlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
        android:id="@+id/imgbtn1"
        android:background="@drawable/abizarstel"
        android:layout_width="130dp"
        android:layout_height="150dp">

    </ImageView>
        <Button
        android:id="@+id/btn1"
        android:text="Tibladin n yimnayen"
        android:textColor="#A4FDF7F7"
        android:textSize="20sp"
        android:layout_marginTop="-5dp"
        android:background="#00FFFFFF"
        android:layout_width="150dp"
        android:layout_height="50dp">

    </Button>
</LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"

            android:background="@drawable/btn_tam_tavlat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/imgbtn2"
                android:background="@drawable/amzujimg"
                android:layout_width="130dp"
                android:layout_height="150dp">

            </ImageView>
            <Button
                android:id="@+id/btn2"
                android:text="Tibladin umezruy"
                android:textColor="#A4FDF7F7"
                android:textSize="20sp"
                android:layout_marginTop="-5dp"
                android:background="#00FFFFFF"
                android:layout_width="150dp"
                android:layout_height="50dp">

            </Button>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>