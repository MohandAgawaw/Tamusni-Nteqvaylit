<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/yess">

    <ImageView

        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imglogo"
        android:layout_centerVertical="true"
        android:contentDescription="@string/im"
        >
    </ImageView>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/ettoo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/em"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/et_bbg"
            android:layout_marginTop="5dp" />
        <EditText
            android:id="@+id/titree"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:ems="10"

            android:inputType="textPersonName"
            android:hint="@string/Prenom"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:background="@drawable/et_bbg"
            android:layout_marginTop="5dp"
            android:autofillHints="0"
            tools:targetApi="o" />

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView3"
            android:layout_width="380dp"
            android:gravity="center"
            android:layout_height="110dp"
            android:hint="@string/aw"
            android:background="@drawable/et_bbg"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"/>




        <Button
            android:id="@+id/BTN_ar2"
            android:layout_width="154dp"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:text="@string/sw"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/et_bbg"/>

        <TextView
            android:id="@+id/text_send"
            android:layout_width="351dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent" />


    </LinearLayout>


</RelativeLayout>