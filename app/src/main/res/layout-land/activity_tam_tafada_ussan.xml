        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="Dimanche : acer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Lundi : arim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Mardi : aram"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Mercredi : ahad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Jeudi : amhad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Vendredi : sem "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:text="Samedi : sed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/imglogo"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>
    </LinearLayout>




</RelativeLayout>