<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tamurth"
    android:background="@drawable/yess">

<ImageView
    android:layout_marginLeft="10dp"
    android:layout_width="120dp"
    android:layout_alignParentLeft="true"
    android:layout_height="120dp"
    android:id="@+id/imglogo"
android:layout_centerVertical="true"
    android:contentDescription="@string/choix">

</ImageView>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:background="#37FFFFFF"

        android:gravity="center"
        android:text="@string/choix" />


<LinearLayout
    android:id="@+id/lna"
    android:layout_marginTop="10dp"
    android:layout_centerHorizontal="true"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <Spinner
        android:layout_marginEnd="20dp"
        android:layout_marginStart="50dp"
        android:padding="5dp"
        android:id="@+id/spinnerr"
        android:layout_width="150dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/nadhi"
        android:layout_width="90dp"
        android:layout_height="25dp"
        android:text="@string/clik"
        android:background="@drawable/et_bbg" />
</LinearLayout>

    <LinearLayout
        android:id="@+id/scr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lna"
        android:layout_alignEnd="@+id/textView6"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/textView6"
        android:background="#57292929"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnply"
            android:layout_width="50dp"
            android:layout_height="50dp">

        </ImageView>

        <TextView
            android:id="@+id/txttimecu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#000000"
            android:textSize="20sp">

        </TextView>

        <SeekBar
            android:id="@+id/seekbarid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

        </SeekBar>

        <TextView
            android:id="@+id/timedur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_00_00"
            android:textColor="#FF0000"
            android:textSize="17sp"
            android:textStyle="bold">

        </TextView>
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/scr"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="#7943789E">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RecyclerView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

            </androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

    </ScrollView>




</RelativeLayout>